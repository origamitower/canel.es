language purr.core

module examples.simple.factorial
  provides { _ factorial }
  uses purr.numeric.integer { _ - _, _ + _, _ * _, _ === _ }

  define n factorial =
    match n
      case 0 do 1
      case 1 do 1
      case _ do (n - 1) factorial * n

  where
    assert 0 factorial === 1;
    assert 1 factorial === 1;
    assert 5 factorial === 120
