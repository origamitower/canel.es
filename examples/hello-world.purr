language purr.core/1

module hello_world/1 where
  from purr.prelude/1 use (display, +, trace)
  public (main)

  record Greeting { who, message }


  define say: message to: who = Greeting { who = who, message = message }

  define main = match (say: "Hello" to: "World") trace
    case Greeting { who, message } do
      (message + ", " + who) display
