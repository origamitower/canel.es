language purr.core

module purr.testing
  provides { _ ==> _ }
  uses purr.intrinsics.primitives { eq, show, indent }
  uses purr.text { _ + _ }

  define actual ==> expected =
    if eq(expected, actual) then
      true
    else
      "Expected:\n\n" + indent(2, show(expected))
    + "\n\n"
    + "Actual:\n\n"   + indent(2, show(actual))
    + "\n"