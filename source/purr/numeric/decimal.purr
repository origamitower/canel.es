language purr.core

module purr.numeric.decimal
  provides { Decimal, _ - _, _ + _, _ * _, _ === _ }
  uses purr.intrinsics.types { Decimal }
  uses purr.intrinsics.primitives { dec_eq, dec_sub, dec_add, dec_mul }

  define (a is Decimal) === (b is Decimal) = dec_eq(a, b)

  define (a is Decimal) + (b is Decimal) = dec_add(a, b)
  define (a is Decimal) - (b is Decimal) = dec_sub(a, b)
  define (a is Decimal) * (b is Decimal) = dec_mul(a, b)